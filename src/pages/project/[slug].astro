const coverImages = await import.meta.glob('/src/assets/cover/**.{jpg,png,webp,JPG}',{eager: true});

let coverImage=coverImages['/src/assets/cover/image-not-found.png'];
for (const path of Object.keys(coverImages)) {
  const regex = /\/cover\/([^/]+)\./;
  const match = path.match(regex);
  if (match && match[1] == event?.slug) {
    coverImage = coverImages[path]
